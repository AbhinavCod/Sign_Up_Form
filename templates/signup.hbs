<!DOCTYPE html>
<html lang="en">
<head>
  {{>headerlinks}}
</head>
<body>

  
     <form class="signup-form" action="/signup" method="POST">

      <!-- form header -->
      <div class="form-header">
        <h1>Create Account</h1>
      </div>

      <!--a form body -->
      <div class="form-body">

        {{!-- firstname and lastname --}}

         <div class="horizontal-group">
          <div class="form-group left">
            <label for="firstname" class="label-title">First name *</label>
            <input name="firstname"  type="text" id="firstname" class="form-input" placeholder="enter your first name"/>
          </div>
          <div class="form-group right">
            <label for="lastname" value="firstname" class="label-title">Last name</label>
            <input name="lastname"  type="text" id="lastname" class="form-input" placeholder="enter your last name" />
          </div>
        </div>
        

        <!-- Email -->
        <div class="form-group">
          <label for="email" class="label-title">Email*</label>
          <input name="email"  type="email" id="email" class="form-input" placeholder="enter your email">
        </div>

        {{!-- phone --}}
        <div class="form-group">
          <label for="phone" class="label-title">Phone*</label>
          <input name="phone"  type="phone" id="phone" class="form-input" placeholder="enter your phone-number">
        </div>

        <!-- Passwrod and confirm password -->
        <div class="horizontal-group">
          <div class="form-group left">
            <label for="password" class="label-title">Password *</label>
            <input name="pass" type="password"  id="password" class="form-input" placeholder="enter your password" >
          </div>
          <div class="form-group right">
            <label for="confirm-password" class="label-title">Confirm Password *</label>
            <input name="cpass" type="password"  class="form-input" id="confirm-password" placeholder="enter your password again">
          </div>
        </div>

        <!-- Gender and Hobbies -->
        <div class="horizontal-group">
          <div class="form-group left">
            <label class="label-title">Gender:</label>
            <div class="input-group">
              <label for="male"><input type="radio" name="gender" value="male" id="male"> Male</label>
              <label for="female"><input type="radio" name="gender" value="female" id="female"> Female</label>
            </div>
          </div>
        </div>     

      <!-- form-footer -->
      <div class="form-footer">
        <span>* required</span>
        <button>
        <input type="submit" class="btn" value="Create"/>
        </button>
      </div>

    </form>
</body>
</body>
</html>